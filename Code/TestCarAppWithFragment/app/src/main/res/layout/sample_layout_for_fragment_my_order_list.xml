<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="15dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.cardview.widget.CardView
        android:id="@+id/cardview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="15dp"
        android:backgroundTint="#D3D3D3">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/OrderedProductImageViewId"
                android:layout_width="match_parent"
                android:layout_height="240dp"
                android:src="@mipmap/ic_launcher"
                android:scaleType="centerCrop"
                android:padding="20dp"
                />

            <TextView
                android:id="@+id/OrderItemNameId"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:layout_marginStart="10dp"
                android:layout_marginTop="30dp"
                android:layout_marginEnd="10dp"
                android:layout_marginBottom="10dp"
                android:layout_below="@+id/OrderedProductImageViewId"
                android:text="Order Name : "
                android:textSize="20sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/OrderItemQuantityId"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:layout_below="@+id/OrderItemNameId"
                android:text="Quantity : "
                android:textSize="20sp"
                android:textStyle="bold"
                />


            <TextView
                android:id="@+id/PriceTextViewId"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:layout_below="@+id/OrderItemQuantityId"
                android:text="Price : "
                android:textSize="20sp"
                android:textStyle="bold"
                />


            <TextView
                android:id="@+id/TotalPriceTextViewId"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:layout_below="@+id/PriceTextViewId"
                android:text="Total Price : "
                android:textSize="20sp"
                android:textStyle="bold"
                />


<!--            <Button
                android:id="@+id/CreatePDFButtonId"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/TotalPriceTextViewId"
                android:layout_centerHorizontal="true"
                android:layout_marginStart="10dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="10dp"
                android:layout_marginBottom="10dp"
                android:background="@drawable/buttonshape"
                android:backgroundTint="#4BFF22"
                android:drawableStart="@drawable/ic_baseline_picture_as_pdf_24"
                android:text="Create PDF"
                android:textAllCaps="false"
                android:textSize="25sp"
                android:textStyle="bold" />-->



        </RelativeLayout>





    </androidx.cardview.widget.CardView>




</RelativeLayout>