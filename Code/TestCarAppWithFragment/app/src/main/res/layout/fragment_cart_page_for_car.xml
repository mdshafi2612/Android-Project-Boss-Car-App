<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/grey_font">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent" >


            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/CartPageRecyclerViewId"
                android:layout_width="match_parent"
                android:layout_margin="20dp"
                android:layout_height="630dp" />

            <Button
                android:id="@+id/ContinueShoppingId"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/CartPageRecyclerViewId"
                android:layout_marginStart="30dp"
                android:layout_marginTop="30dp"
                android:layout_marginBottom="10dp"
                android:background="@drawable/buttonshape"
                android:text="Continue Shopping"
                android:textAllCaps="false"

                />

            <Button
                android:id="@+id/GoToCheckoutPageId"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/CartPageRecyclerViewId"
                android:layout_centerInParent="true"
                android:layout_marginStart="20dp"
                android:layout_marginTop="30dp"
                android:layout_marginBottom="10dp"
                android:layout_marginEnd="20dp"
                android:layout_toEndOf="@+id/ContinueShoppingId"
                android:background="@drawable/buttonshape"
                android:text="Checkout Car"
                android:textAllCaps="false"

                />



        </RelativeLayout>


    </ScrollView>






</androidx.constraintlayout.widget.ConstraintLayout>