<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_margin="15dp"
    android:backgroundTint="@color/white">

    <androidx.cardview.widget.CardView
        android:id="@+id/cardview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="15dp"
        android:backgroundTint="#D3D3D3">

        <RelativeLayout
            android:padding="15dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

<!--            <ImageView
                android:id="@+id/carBrandImageViewId"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:scaleType="centerCrop"
                android:src="@drawable/car_image1"/>-->


            <TextView
                android:id="@+id/carBrandNameId"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingTop="4dp"
                android:text="Car Brand Name"
                android:textSize="18sp"
                android:textStyle="italic" />

            <!--<TextView
                android:id="@+id/carBrandActiveDeactiveStatusId"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/carBrandNameId"
                android:paddingTop="4dp"
                android:text="Status(Active or Deactive) : "
                android:textSize="18sp"
                android:textStyle="italic" />-->




            <Button
                android:id="@+id/carBrandactivedeactiveButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/carBrandNameId"
                android:layout_marginStart="100dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="15dp"


                />


            <Button
                android:id="@+id/editButton"
                android:layout_width="30dp"
                android:layout_height="40dp"
                android:layout_below="@+id/carBrandNameId"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="15dp"
                android:layout_toEndOf="@+id/carBrandactivedeactiveButton"
                android:background="@android:drawable/ic_menu_edit" />

            <Button
                android:layout_marginTop="10dp"
                android:id="@+id/deleteButton"
                android:layout_width="50dp"
                android:layout_height="40dp"
                android:layout_marginEnd="15dp"
                android:background="@android:drawable/ic_delete"
                android:layout_below="@+id/carBrandNameId"
                android:layout_toEndOf="@+id/editButton"
                />




        </RelativeLayout>




    </androidx.cardview.widget.CardView>

</LinearLayout>