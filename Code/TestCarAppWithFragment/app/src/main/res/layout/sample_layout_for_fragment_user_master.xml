<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_margin="15dp"
    android:backgroundTint="@color/white">

    <androidx.cardview.widget.CardView
        android:id="@+id/cardview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="15dp"
        android:backgroundTint="#D3D3D3">

        <RelativeLayout
            android:padding="15dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/usernameId"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingTop="4dp"
                android:text="Username"
                android:textSize="18sp"
                android:textStyle="italic" />

            <TextView
                android:id="@+id/useremailId"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingTop="4dp"
                android:text="User Email Address"
                android:layout_below="@+id/usernameId"
                android:textSize="18sp"
                android:textStyle="italic" />


            <TextView
                android:id="@+id/usermobileId"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingTop="4dp"
                android:text="User Mobile Number"
                android:textSize="18sp"
                android:layout_below="@+id/useremailId"
                android:textStyle="italic" />

            <TextView
                android:id="@+id/useraddressId"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingTop="4dp"
                android:text="User Address"
                android:textSize="18sp"
                android:layout_below="@+id/usermobileId"
                android:textStyle="italic" />


            <TextView
                android:id="@+id/userpasswordId"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingTop="4dp"
                android:text="User Password"
                android:textSize="18sp"
                android:layout_below="@+id/useraddressId"
                android:textStyle="italic" />

            <Button
                android:layout_marginTop="10dp"
                android:layout_marginStart="250dp"
                android:id="@+id/deleteuserButton"
                android:layout_width="50dp"
                android:layout_height="40dp"
                android:layout_marginEnd="15dp"
                android:background="@android:drawable/ic_delete"
                android:backgroundTint="#ff22"
                android:layout_below="@+id/userpasswordId"
                />


        </RelativeLayout>

    </androidx.cardview.widget.CardView>

</LinearLayout>