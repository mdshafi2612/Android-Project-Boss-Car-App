<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_margin="15dp">

    <androidx.cardview.widget.CardView
        android:id="@+id/cardview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="15dp"
        android:backgroundTint="#D3D3D3">

        <RelativeLayout
            android:id="@+id/RelativeLayout1"
            android:padding="15dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/carPartsImageViewId"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:scaleType="fitXY"
                android:src="@drawable/wheel_image"/>

            <TextView
                android:id="@+id/carPartId"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/carPartsImageViewId"
                android:paddingTop="4dp"
                android:text="ID : "
                android:textSize="18sp"
                android:textStyle="italic" />

            <TextView
                android:id="@+id/carPartsNameId"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/carPartId"
                android:paddingTop="4dp"
                android:text="Car Parts Name"
                android:textSize="18sp"
                android:textStyle="italic" />



            <TextView
                android:id="@+id/carPartsQuantityId"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/carPartsNameId"
                android:paddingTop="4dp"
                android:text="Parts Quantity"
                android:textSize="18sp"
                android:textStyle="italic" />

            <TextView
                android:id="@+id/carPartsPriceId"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/carPartsQuantityId"
                android:paddingTop="4dp"
                android:text="Price : "
                android:textSize="18sp"
                android:textStyle="italic" />

            <TextView
                android:id="@+id/carPartsVoucherId"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/carPartsPriceId"
                android:paddingTop="4dp"
                android:text="Voucher ID : "
                android:textSize="18sp"
                android:textStyle="italic" />


            <TextView
                android:layout_marginTop="30dp"
                android:id="@+id/dummyTextViewId"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/carPartsVoucherId"
                android:paddingTop="4dp"
                android:textSize="18sp"
                android:textStyle="italic" />



            <Button
                android:id="@+id/activedeactiveButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/carPartsVoucherId"
                android:layout_marginStart="100dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="15dp"


                />


            <Button
                android:id="@+id/editButton"
                android:layout_width="30dp"
                android:layout_height="40dp"
                android:layout_below="@+id/carPartsVoucherId"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="15dp"
                android:layout_toEndOf="@+id/activedeactiveButton"
                android:background="@android:drawable/ic_menu_edit" />

            <Button
                android:layout_marginTop="10dp"
                android:id="@+id/deleteButton"
                android:layout_width="50dp"
                android:layout_height="40dp"
                android:layout_marginEnd="15dp"
                android:background="@android:drawable/ic_delete"
                android:layout_below="@+id/carPartsVoucherId"
                android:layout_toEndOf="@+id/editButton"
                />



        </RelativeLayout>






    </androidx.cardview.widget.CardView>

</LinearLayout>