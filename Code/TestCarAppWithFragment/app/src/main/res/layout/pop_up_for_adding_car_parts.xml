<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
<ScrollView
    android:id="@+id/layout_id"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <androidx.cardview.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <RelativeLayout
                android:padding="24dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" >

                <TextView
                    android:id="@+id/title"
                    android:layout_centerHorizontal="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Add New Car Parts"
                    android:textSize="18sp"
                    android:textStyle="italic" />

                <EditText
                    android:id="@+id/carPartsName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/title"
                    android:hint="Enter car parts name"
                    android:inputType="text"/>

                <EditText
                    android:id="@+id/carPartsQuantity"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/carPartsName"
                    android:hint="Enter car parts quantity"
                    android:textSize="18sp"
                    android:inputType="text"
                    />



                <EditText
                    android:id="@+id/carPartsPrice"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/carPartsQuantity"
                    android:hint="Enter Car Parst Price "
                    android:inputType="number"/>

                <EditText
                    android:id="@+id/carPartsVoucher"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/carPartsPrice"
                    android:hint="Enter Car Parts Voucher"
                    android:inputType="text"/>


                <TextView
                    android:id="@+id/AddImageTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:layout_below="@+id/carPartsVoucher"
                    android:text="Add Car Parts Image "
                    android:textSize="20sp"
                    android:textStyle="bold"
                    />

                <Button

                    android:id="@+id/AddImagebtn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/AddImageTextView"
                    android:layout_marginTop="20dp"
                    android:text="Choose an image from the gallery"
                    android:layout_centerHorizontal="true"
                    android:background="@drawable/buttonshape"
                    />

                <Button
                    android:id="@+id/saveButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/AddImagebtn"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/buttonshape"
                    android:text="Save Car Parts in DB"
                    android:layout_centerHorizontal="true"
                    android:textColor="#FFFFFF"
                    android:textSize="14sp"
                    android:textStyle="bold" />




            </RelativeLayout>




        </androidx.cardview.widget.CardView>




    </LinearLayout>



</ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>